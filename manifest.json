{
  "author": "Mozilla IoT",
  "description": "Sengled Wi-Fi bulb adapter plugin for Mozilla WebThings Gateway",
  "gateway_specific_settings": {
    "webthings": {
      "exec": "python3 {path}/main.py",
      "primary_type": "adapter",
      "strict_max_version": "*",
      "strict_min_version": "0.10.0"
    }
  },
  "homepage_url": "https://github.com/mozilla-iot/sengled-adapter",
  "id": "sengled-adapter",
  "license": "MPL-2.0",
  "manifest_version": 1,
  "name": "Sengled",
  "options": {
    "default": {
      "username": "",
      "password": ""
    },
    "schema": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string",
          "description": "Sengled app username"
        },
        "password": {
          "type": "string",
          "description": "Sengled app password"
        }
      }
    }
  },
  "short_name": "Sengled",
  "version": "0.2.0"
}
