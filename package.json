{
  "name": "sengled-adapter",
  "display_name": "Sengled",
  "version": "0.1.1",
  "description": "Sengled Wi-Fi bulb adapter plugin for Mozilla WebThings Gateway",
  "author": "Mozilla IoT",
  "main": "main.py",
  "keywords": [
    "mozilla",
    "iot",
    "adapter",
    "sengled"
  ],
  "homepage": "https://github.com/mozilla-iot/sengled-adapter",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/mozilla-iot/sengled-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/mozilla-iot/sengled-adapter/issues"
  },
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "lib",
    "main.py",
    "pkg/__init__.py",
    "pkg/client.py",
    "pkg/sengled_adapter.py",
    "pkg/sengled_device.py",
    "pkg/sengled_property.py"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "python3 {path}/main.py",
    "config": {
      "username": "",
      "password": ""
    },
    "schema": {
      "type": "object",
      "required": [
        "username",
        "password"
      ],
      "properties": {
        "username": {
          "type": "string",
          "description": "Sengled app username"
        },
        "password": {
          "type": "string",
          "description": "Sengled app password"
        }
      }
    }
  }
}
